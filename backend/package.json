{
  "name": "bill-gen-backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "rm -rf dist && tsc && npm run copy-assets",
    "copy-assets": "mkdir -p dist/assets && cp -r src/assets/* dist/assets/ 2>/dev/null || true",
    "dev": "nodemon --exec ts-node --esm src/index.ts",
    "start": "node dist/index.js",
    "test": "echo \"No tests specified\" && exit 0",
    "lint": "eslint src/**/*.ts"
  },
  "dependencies": {
    "@pdf-lib/fontkit": "^1.1.1",
    "cors": "^2.8.5",
    "docxtemplater": "^3.60.1",
    "dotenv": "^16.4.7",
    "express": "^4.18.3",
    "mongodb": "^6.15.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "pdf-lib": "^1.17.1",
    "pizzip": "^3.1.8",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.26",
    "@types/morgan": "^1.9.9",
    "eslint": "^8.57.0",
    "nodemon": "^3.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
