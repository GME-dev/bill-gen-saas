# Supabase Configuration
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_PROJECT_ID=your_supabase_project_id  # Project ID from Supabase dashboard (needed for direct DB connection)

# Application Configuration
NODE_ENV=development  # Use 'development' for local, 'production' for Railway
PORT=3000

# Frontend URLs
CORS_ORIGIN=http://localhost:5173  # Use this for local development
# CORS_ORIGIN=https://bill-gen-saas.pages.dev  # Use this for production

# Database Configuration (Supabase)
DATABASE_URL=your_supabase_connection_string
# For direct connection (more reliable SSL):
# DATABASE_URL=postgres://username:password@db.your_project_id.supabase.co:5432/postgres?sslmode=prefer

# File Storage
TEMPLATES_DIR=./templates

# Frontend Environment Variables (for Vite)
VITE_SUPABASE_URL=${SUPABASE_URL}
VITE_SUPABASE_ANON_KEY=${SUPABASE_ANON_KEY}
VITE_API_URL=http://localhost:3000  # Use this for local development
# VITE_API_URL=https://your-railway-app-url.railway.app  # Use this for production 