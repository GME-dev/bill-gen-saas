# Application
NODE_ENV=production
PORT=3000
FRONTEND_URL=http://localhost:3000

# Directories
CERTIFICATES_DIR=/app/backend/assets/certificates
FONTS_DIR=/app/backend/assets/fonts

# Security
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRES_IN=24h

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Timestamping Service
TIMESTAMP_SERVICE_URL=https://timestamp.digicert.com
TIMESTAMP_SERVICE_USERNAME=your-username
TIMESTAMP_SERVICE_PASSWORD=your-password

# Certificate Revocation
CRL_URL=https://crl.digicert.com/crl.crl
CRL_UPDATE_INTERVAL=3600 